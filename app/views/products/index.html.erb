<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Products</h1>
        <table class="table">
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Url</th>
            <th>Description</th>
          </tr>
          <%@products.each do |product|%>
          <tr>
            <td><%=product.id%></td>
            <td><%=link_to product.name, product%></td>
            <td><%=product.url%></td>
            <td><%=product.description%></td>
            <td>
              <%if signed_in?%>
                <%=link_to "Editar producto", edit_product_path(product) %></td>
                  <td><%=link_to "Eliminar producto", product_path(product), method: :delete, data: {confirm: "Estas seguro de eliminar este producto?"}%></td>
              <%end%>
          </tr>
          <%end%>
        </table>
    </div>
  </div>
  <%if signed_in?%>
    <div class="text-right">
      <%=link_to "Publicar producto", new_product_path, class:"btn btn-primary"%>
    </div>
  <%end%>
</div>
