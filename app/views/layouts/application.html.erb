<!DOCTYPE html>
<html>
  <head>
    <title>ClonProductHunt</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if signed_in?%>
      <div class="">Hola usuario twitter: <%=current_user.twitter_handle%></div>
      <div class="">Hola usuario: <%=current_user.name%></div>
    <%end%>

    <%if flash[:notice]%>
      <div class="alert alert-info"><%=flash[:notice]%></div>
    <%end%>
    <%= yield %>
  </body>
</html>
